<?xml version="1.0"?>
<!DOCTYPE liferay-portlet-app PUBLIC "-//Liferay//DTD Portlet Application 6.2.0//EN" "http://www.liferay.com/dtd/liferay-portlet-app_6_2_0.dtd">

<liferay-portlet-app>
    <portlet>
        <portlet-name>webstar-newsletter-admin</portlet-name>
        <icon>/css/images/wcs-newsletter-icon-small.png</icon>
		<configuration-action-class>
			com.wcs.newsletter.action.NewsletterAdminConfigurationActionImpl
		</configuration-action-class>
        <control-panel-entry-category>content</control-panel-entry-category>
        <control-panel-entry-weight>100</control-panel-entry-weight>         
        <instanceable>false</instanceable>
        <remoteable>true</remoteable>
        <requires-namespaced-parameters>false</requires-namespaced-parameters>
<!--        <ajaxable>false</ajaxable>-->
        <header-portlet-css>/css/WcsNewsletter.css</header-portlet-css>
        <footer-portlet-css>/css/footer.css</footer-portlet-css>
    </portlet>
    <portlet>
        <portlet-name>webstar-newsletter-subscription</portlet-name>      
        <configuration-action-class>com.wcs.newsletter.config.SubscriptionConfigurationActionImpl</configuration-action-class>       
        <use-default-template>true</use-default-template> 
        <instanceable>false</instanceable>        
        <ajaxable>false</ajaxable>            
        <!--<header-portlet-css>/css/jquery-ui-1.10.1.css</header-portlet-css>-->
        <!--<header-portlet-css>/css/jquery.multiselect.css</header-portlet-css>-->     
        <header-portlet-css>/css/WcsNewsletter.css</header-portlet-css>        
        <!--<header-portlet-javascript>/js/jquery-1.9.1.js</header-portlet-javascript>-->
        <!--<header-portlet-javascript>/js/jquery-ui-1.10.1.custom.js</header-portlet-javascript>-->
        <!--<header-portlet-javascript>/js/jquery.multiselect.js</header-portlet-javascript>-->        
        <add-default-resource>true</add-default-resource>
    </portlet>   
    <portlet>
        <portlet-name>webstar-newsletter-subscription-jquery</portlet-name>      
        <configuration-action-class>com.wcs.newsletter.config.SubscriptionJqueryConfigurationActionImpl</configuration-action-class>       
        <use-default-template>true</use-default-template> 
        <instanceable>false</instanceable>        
        <ajaxable>false</ajaxable>            
        <header-portlet-css>/css/jquery-ui-1.10.1.css</header-portlet-css>
        <header-portlet-css>/css/jquery.multiselect.css</header-portlet-css>     
        <header-portlet-css>/css/WcsNewsletter.css</header-portlet-css>        
        <header-portlet-javascript>/js/jquery-1.9.1.js</header-portlet-javascript>
        <header-portlet-javascript>/js/jquery-ui-1.10.1.custom.js</header-portlet-javascript>
        <header-portlet-javascript>/js/jquery.multiselect.js</header-portlet-javascript>        
        <add-default-resource>true</add-default-resource>
    </portlet> 
    <portlet>
        <portlet-name>webstar-newsletter-subscription-action</portlet-name>            
        <use-default-template>true</use-default-template> 
        <instanceable>false</instanceable>
        <ajaxable>false</ajaxable>    
        <header-portlet-css>/css/WcsNewsletter.css</header-portlet-css>
        <add-default-resource>true</add-default-resource>     
    </portlet>      
    <role-mapper>
        <role-name>administrator</role-name>
        <role-link>Administrator</role-link>
    </role-mapper>
    <role-mapper>
        <role-name>guest</role-name>
        <role-link>Guest</role-link>
    </role-mapper>
    <role-mapper>
        <role-name>power-user</role-name>
        <role-link>Power User</role-link>
    </role-mapper>
    <role-mapper>
        <role-name>user</role-name>
        <role-link>User</role-link>
    </role-mapper>
</liferay-portlet-app>